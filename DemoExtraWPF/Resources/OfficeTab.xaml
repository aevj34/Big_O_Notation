    <ControlTemplate x:Key="OfficeTabControl" TargetType="{x:Type TabControl}">
        <ControlTemplate.Resources>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <StackPanel Cursor="Hand" Orientation="Horizontal" SnapsToDevicePixels="True" Margin="0,0,0,2">

                                <Path Name="arrowPathWhite" Visibility="Visible"
                                 HorizontalAlignment="Center"
                                 Margin="10,0,0,0"
                                 VerticalAlignment="Center"
                                 Fill="Transparent"
                                 Data="M 0 0 L 4 4 L 0 8 Z" />
                                
                                <Path Name="arrowPath" Visibility="Collapsed"
                                 HorizontalAlignment="Center"
                                 Margin="10,0,0,0"
                                 VerticalAlignment="Center"
                                 Fill="#B22B3F68"
                                 Data="M 0 0 L 4 4 L 0 8 Z" />

                                <Border
                                    Name="buttonShape"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="1,0,1,1"
                                    Height="22"
                                    CornerRadius="2,2,2,2"
                                    SnapsToDevicePixels="True">
                                    <ContentPresenter
                                    Name="buttonText"
                                    Margin="5,0,0,0" 
                                    TextBlock.FontSize="10"
                                    TextBlock.TextAlignment="Left"
                                    Content="{TemplateBinding Header}"
                                    VerticalAlignment="Center"/>
                                </Border>


                            </StackPanel>
                            
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="true">
                                    <Setter TargetName="buttonShape" Property="TextBlock.Foreground" Value="{StaticResource ForegroundBrush}" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="buttonShape" Property="TextBlock.Foreground" Value="{StaticResource PressedForegroundBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="arrowPathWhite" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="arrowPath" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="buttonShape" Property="TextBlock.Foreground" Value="Black" />
                                    <Setter TargetName="buttonShape" Property="TextBlock.FontWeight" Value="SemiBold" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                            
                        </ControlTemplate>
                        
                    </Setter.Value>
                </Setter>
            </Style>
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource LightBrush}" 
                    Grid.Column="0" 
                    BorderBrush="{StaticResource SolidBorderBrush}" 
                    BorderThickness="0,0,0.5,0" 
                    SnapsToDevicePixels="True" >
                <Image  HorizontalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="3" Margin="0"  Grid.ColumnSpan="2" Stretch="Fill" VerticalAlignment="Stretch" Opacity="0.25" Source="/NetSolutions.Aspen.WPF;component/Images/tabBack.jpg"></Image>
              
            </Border>


            <StackPanel IsItemsHost="True"   
                        Grid.Column="0"
                        Margin="0,5,-1,0" 
                        SnapsToDevicePixels="True" />
            <ContentPresenter 
                Content="{TemplateBinding SelectedContent}" 
                Grid.Column="1" 
                Margin="0,0,0,0" />
        </Grid>
    </ControlTemplate>


