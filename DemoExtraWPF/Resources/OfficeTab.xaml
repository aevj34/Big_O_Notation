                                    BorderThickness="1,0,1,1"
                                    Height="22"
                                    CornerRadius="2,2,2,2"
                                    SnapsToDevicePixels="True">
                                    <ContentPresenter
                                    Name="buttonText"
                                    Margin="5,0,0,0" 
                                    TextBlock.TextAlignment="Left"
